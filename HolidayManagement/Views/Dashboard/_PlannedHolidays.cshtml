<h1>Planned Holidays</h1>


<div class="container">
    
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Email</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: vacations">
            <tr>
                <td data-bind="text: users.email"></td>
                <td data-bind="text: startdate()"></td>
                <td data-bind="text: enddate()"></td>
                <td data-bind="text: date()"></td>
                <td><button type="button" class="btn btn-primary btn-md"  data-bind="click: $root.Accept.bind($data)">Accept</button></td>
                <td><button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#Reasonmodal" data-bind="click: $root.initdecline.bind($data)" >Decline</button></td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="Reasonmodal" role="dialog" >
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Reason</h4>
                        </div>
                        <div class="modal-body">
                            @Html.Partial("_Reason")
                        </div>
                        <div class="modal-footer">
                            
                            <button type="submit" class="btn btn-default" data-bind="click: Decline" >Decline</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
           
        </tbody>
    </table>
</div>
